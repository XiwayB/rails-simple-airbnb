<div class="container">

  <div class="row">
    <div class="col-12">
      <h1>All our Flats - <%= @flats.count %> </h1>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-card">
        <div class="flat-card-image">
          <img src="<%= flat.url %>" alt="">
        </div>
        <div class="flat-card-infos">
          <h3><%= flat.name %></h3>
          <p> <%= flat.address %> </p>
          <p> ðŸ‘¥ <%= flat.number_of_guests %> </p>
          <p> â‚¬ <%= flat.price_per_night %> </p>
        <div class="flat-card-buttons">
          <%= link_to "See more details", flat_path(flat), class: "btn btn-primary" %>
          <%= link_to "Delete", flat_path(flat), method: :delete, data:{confirm: "Are you sure?"}, class: "btn btn-danger" %>
          </div>
          </div>
        </div>
      </div>
     <% end %>
  </div>

</div>
